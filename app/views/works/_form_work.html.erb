<%= form_for ([@procedure, @work]) do |f| %>
	<div class="form-group">
		<%= f.label 'Data do Procedimento' %>
		<%= f.date_field :date_work, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label 'Procedimento Realizado' %>
		<%= f.text_area :description, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.label 'Proximos Procedimentos' %>
		<%= f.text_field :next_work, class: 'form-control' %>
	</div>
	<div class="form-group">
		<%= f.submit :Salvar, class: 'btn btn-success' %>
	</div>
<% end %>