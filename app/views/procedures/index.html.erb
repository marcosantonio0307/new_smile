<div class="row">
	<div class="col-lg-12 col-md-12 col-sm-12">
		<div class="container-big">
			<h2 align="center"><b><%= @title %></b></h2><br>
			<p style="float: left;"><%= link_to 'Novo Processo', new_procedure_path, class: 'btn btn-success' %></p>
			<input type="text" id="search" placeholder="Buscar Paciente" style="float: right; margin-bottom: 1em;">
			<table class="table table-bordered">
				<thead>
					<th>Paciente</th>
					<th>Drº/Profissional</th>
					<th>Data</th>
					<th>Status</th>
					<th></th>
				</thead>
				<tbody id="table">
					<% @procedures.each do |procedure| %>
					<tr>
						<td><%= procedure.patient %></td>
						<td><%= procedure.doctor %></td>
						<td><%= datebr(procedure.date_procedure) %></td>
						<% if procedure.status == true %>
							<td>CONCLUÍDO</td>
						<% else %>
							<td>EM ABERTO</td>
						<% end %>
						<td class="options">
							<%= link_to procedure_path(procedure) do %>
								<i class="fa fa-sign-in"></i>
							<% end %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

<script type="text/javascript">
	$(function(){
	    $("#search").keyup(function(){
	        var texto = $(this).val();
	        $("#table tr").css("display", "table-row");
	        $("#table tr").each(function(){
	            if($(this).text().toUpperCase().indexOf(texto.toUpperCase()) < 0)
   				   $(this).css("display", "none");
	        });
	    });
	});
</script>